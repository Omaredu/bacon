<div class="navbar">
    <%= image_tag asset_path('logo.svg'), class: "nav-logo" %>
    <img onClick="setShown()" class="profile-picture" src="https://expertphotography.com/wp-content/uploads/2020/08/social-media-profile-photos-9.jpg">
</div>

<div id="menubar" class="nav-menu">
    <%= link_to "Mi perfil", user_path(Current.user) %>
    <% if Current.user.admin %>
        <%= link_to "Administrar organización", admin_path %>
    <% end %>
    <%= button_to "Cerrar sesión", logout_path, method: :delete %>
</div>

<script>
    let shown = false
    let menu = document.getElementById("menubar")
    menu.style.display = shown ? 'flex' : 'none'

    function setShown() {
        shown = !shown
        menu.style.display = shown ? 'flex' : 'none'
    }
</script>